<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitites.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="8dp"
                android:text="ListView"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="none">

            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="8dp"
                android:text="AutoCompleteTextView"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTV"
                android:layout_width="match_parent"
                android:background="@drawable/view_background"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="8dp"
                android:text="Spinner"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <Spinner
                android:id="@+id/spinnerView"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_margin="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="8dp"
                android:text="GridView"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:numColumns="2"
                android:scrollbars="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="8dp"
                android:text="Custom List"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnShowPersons"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:text="Show Persons"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnShowMovies"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:text="Show Movies"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnShowFavoriteItems"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:text="Show Favorite Items"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnShowCartItems"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:text="Show Cart Items"
                android:textSize="22sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>